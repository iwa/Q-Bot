{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Program",
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": [
                "<node_internals>/**/*.js"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "tsc: build",
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ]
        }
    ]
}